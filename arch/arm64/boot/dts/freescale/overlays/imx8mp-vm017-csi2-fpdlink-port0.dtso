/dts-v1/;
/plugin/;

#include "imx8mp-csi2-fpdlink-port0.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "phytec,imx8mp-phyboard-pollux";
};

&i2c_csi2_port0 {
	camera@36 {
		#address-cells = <0x1>;
		#size-cells = <0x0>;

		compatible = "onsemi,ar0521";
		reg = <0x36>;
		clocks = <&ser_csi2_port0>;
		clock-names = "ext";
		isp-bus-info = "csi0";

		reset-gpios = <&ser_csi2_port0 3 GPIO_ACTIVE_LOW>;

		port@0 {
			reg = <0>;

			vm017_csi2_port0_ep: endpoint {
				remote-endpoint = <&ser_csi2_port0_in>;
				bus-type = <4>; /* MIPI CSI-2 D-PHY */
				link-frequencies = /bits/ 64 <288000000>;
				data-lanes = <1 2 3 4>;
				clock-lanes = <0>;
				clock-noncontinuous = <1>;
			};
		};
	};

	eeprom@56 {
		compatible = "atmel,24c02";
		reg = <0x56>;
		pagesize = <16>;
	};
};

&ser_csi2_port0 {
	clock-frequency = <27000000>;
};

&ser_csi2_port0_in {
	remote-endpoint = <&vm017_csi2_port0_ep>;
	data-lanes = <1 2 3 4>;
};
