/dts-v1/;
/plugin/;

/ {
	compatible = "phytec,imx8mp-phyboard-pollux";

	fragment@2 {
		target-path= "/";

		__overlay__ {
			vm016_csi2_clk: vm016-csi2-ext-clk {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				clock-frequency = <27000000>;
			};
		};
	};
};

&i2c2 {
	#address-cells = <1>;
	#size-cells = <0>;

	camera@10 {
		#address-cells = <0x1>;
		#size-cells = <0x0>;

		compatible = "onsemi,ar0144";
		reg = <0x10>;
		clocks = <&vm016_csi2_clk>;
		clock-names = "ext";
		isp-bus-info = "csi1";

		port@0 {
			reg = <0>;

			vm016_csi2_ep: endpoint {
				remote-endpoint = <&mipi_csi1_ep>;
				bus-type = <4>; /* MIPI CSI-2 D-PHY */
				link-frequencies = /bits/ 64 <222750000>;
				data-lanes = <1 2>;
				clock-lanes = <0>;
				clock-noncontinuous = <1>;
				onsemi,t-hs-prep = <1>;
				onsemi,t-clk-post = <9>;
			};
		};
	};
};

&mipi_csi_1 {
	#address-cells = <1>;
	#size-cells = <0>;

	port@1 {
		reg = <1>;
		mipi_csi1_ep: endpoint {
			remote-endpoint = <&vm016_csi2_ep>;
			data-lanes = <2>;
			csis-hs-settle = <13>;
			csis-clk-settle = <2>;
			csis-wclk;
		};
	};
};
