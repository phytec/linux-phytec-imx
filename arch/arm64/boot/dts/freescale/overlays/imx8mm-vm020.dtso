/dts-v1/;
/plugin/;

/ {
	compatible = "phytec,imx8mm-phyboard-polis";
};

&{/} {
	vm020_clk: vm020-ext-clk {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <27000000>;
	};
};

&csi1_i2c {
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";

	vm020: camera@10 {
		#address-cells = <0x1>;
		#size-cells = <0x0>;

		compatible = "onsemi,ar0234";
		reg = <0x10>;
		clock-names = "ext";
		clocks = <&vm020_clk>;

		port@0 {
			reg = <0>;

			vm020_ep: endpoint {
				remote-endpoint = <&mipi_csi_ep>;
				bus-type = <4>; /* MIPI CSI-2 D-PHY */
				link-frequencies = /bits/ 64 <450000000>;
				data-lanes = <1 2 3 4>;
				clock-lanes = <0>;
				clock-noncontinuous = <1>;
			};
		};
	};
};

&csi1_mipi_csi {
	port@0 {
		mipi_csi_ep: endpoint {
			remote-endpoint = <&vm020_ep>;
			data-lanes = <1 2 3 4>;
		};
	};
};
